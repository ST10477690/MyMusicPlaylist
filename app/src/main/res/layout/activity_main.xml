<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Enter Song Details Below"
        android:layout_width="217dp"
        android:layout_height="50dp"
        android:text="Enter Song Details Below"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.429"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061" />

    <Button
        android:id="@+id/viewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="67dp"
        android:layout_marginBottom="69dp"
        android:text="View"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="69dp"
        android:text="Exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginBottom="186dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/inputRating"
        android:layout_width="224dp"
        android:layout_height="56dp"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="49dp"
        android:ems="10"
        android:inputType="text"
        android:text="Ratings"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/inputComment"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/inputSongTitle"
        android:layout_width="216dp"
        android:layout_height="55dp"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="27dp"
        android:ems="10"
        android:inputType="text"
        android:text="Song Title"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/inputArtist"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/inputArtist"
        android:layout_width="226dp"
        android:layout_height="49dp"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="42dp"
        android:ems="10"
        android:inputType="text"
        android:text="Artist's Name"
        app:layout_constraintBottom_toTopOf="@+id/inputRating"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/inputComment"
        android:layout_width="211dp"
        android:layout_height="51dp"
        android:layout_marginStart="93dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:inputType="text"
        android:minHeight="48dp"
        android:text="Comment"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/addButton"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>